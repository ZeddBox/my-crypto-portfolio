<header class="mb-4">
  <nav class="flex flex-wrap items-center justify-between px-3 py-3 text-gray-700 bg-gray-100 dark:bg-black dark:text-gray-100 lg:px-10">
    <div class="flex items-center mr-6 flex-no-shrink">
      <%= link_to "ZedFolio", root_path, class:"link text-xl tracking-tight font-black" %>
    </div>
    <div class="block lg:hidden">
      <button class="flex items-center px-3 py-2 border border-gray-500 rounded text-grey hover:text-gray-600 hover:border-gray-600">
        <svg class="w-3 h-3 fill-current" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
      </button>
    </div>
    <div class="items-center block w-full text-center lg:flex-1 lg:flex lg:text-left">
      <div class="lg:flex-grow">
        <%= link_to "Home", root_path, class: "block mt-4 lg:inline-block lg:mt-0 lg:mr-4 mb-2 lg:mb-0 link" %>
        <%= link_to "Landing Page", presentation_path, class: "block mt-4 lg:inline-block lg:mt-0 lg:mr-4 mb-2 lg:mb-0 link" %>
        <%= link_to "Cryptos", currencies_path, class: "block mt-4 lg:inline-block lg:mt-0 lg:mr-4 mb-2 lg:mb-0 link" %>
      <% if user_signed_in? %>
        <%= link_to "Purchases (#{current_user.portfolio.purchases.count})", purchases_path, class: "block mt-4 lg:inline-block lg:mt-0 lg:mr-4 mb-2 lg:mb-0 link" %>
      <% end %>

      </div>
      <div class="items-center block w-full mt-2 text-center lg:flex lg:flex-row lg:flex-1 lg:mt-0 lg:text-left lg:justify-end">
        <p class="w-full text-sm inline-flex truncate mx-3">Last update : <br><%= Currency.last.updated_at.ago_in_words%></p>
        <%= button_to crypto_update_path, method: :post, class: "btn btn-default bg-green-400 hover:bg-green-500 mb-2 lg:mr-2 lg:mb-0 block inline-flex items-center text-sm truncate" do %>
          <i class="fa fa-refresh mr-2"></i><span> Update Prices</span>
        <% end %>
        <% if user_signed_in? %>
          <%= link_to "Edit account", edit_user_registration_path, class: "btn btn-default mb-2 lg:mr-2 lg:mb-0 block inline-flex items-center text-sm min-w-min truncate" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"btn btn-default bg-red-600 text-gray-100 mb-2 lg:mb-0 block inline-flex items-center text-sm min-w-min truncate" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class:"btn btn-default mb-2 mx-3 lg:mr-2 lg:mb-0 block inline-flex items-center text-sm min-w-min truncate" %>
          <%= link_to "Sign Up", new_user_registration_path, class:"btn btn-default block inline-flex items-center text-sm min-w-min truncate" %>
        <% end %>
        <label class="switch">
          <input type="checkbox" name="checkbox" />
          <span class="slider round"></span>
        </label>
      </div>
    </div>
  </nav>
</header>
